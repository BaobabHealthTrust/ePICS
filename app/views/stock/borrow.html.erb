<%= form_tag :action => 'borrow_index', :method => :post  do %>

    <%= select_tag :facility, options_for_select(@supplier_map),
                   {:id => "supplier_id",:field_type => 'alpha',
                    :helpText => "Borrow from"} %>

    <%= select_tag :authorizer, options_for_select(@authorizers),
                       {:id => 'authorizer',
                        :field_type => 'alpha',
                        :allowFreeText => false,
                        :helpText => 'Who Authorised'} %>

    <%= text_field_tag :grn_number, nil,
                       {:id => 'grn_number', :field_type => 'alpha',
                        :helpText => 'Enter GRN/Batch Number'} %>

    <%= text_field_tag :borrow_date, nil,
                       {:id => 'borrow_date', :field_type => 'date',
                        :helpText => 'Enter borrowing date'} %>

    <%= text_field_tag :witness_name,nil,
                       {:id => 'witness_name',
                        :field_type => 'alpha',
                        :ajaxURL => '/stock/get_witness_names?search_string=',
                        :allowFreeText => true,
                        :helpText => 'Enter Witness Names'} %>

    <%= text_field_tag :return_date, nil,
                       {:id => 'return_date', :field_type => 'date',
                        :maxDate => (Date.today + 20.year).to_date,
                        :helpText => 'Enter date for returning items'} %>


    <%= submit_tag "Create borrowing" %>


<% end %>