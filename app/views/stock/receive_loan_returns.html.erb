<%= form_tag :action => 'get_returners_details', :method => :post  do %>

    <%= select_tag :facility, options_for_select(@creditors),
                   { :id => "facility",
                     :field_type => 'alpha',
                     :helpText => "Select facility returning items"} %>

    <%= text_field_tag :grn_number, nil,
                       {:id => 'grn_number', :field_type => 'alpha',
                        :helpText => 'Enter GRN/Batch Number'} %>

    <%= text_field_tag :grn_date, nil,
                       {:id => 'grn_date', :field_type => 'date',
                        :helpText => 'Enter Date of Delivery'} %>

    <%= text_field_tag :witness_names,nil,
                       {:id => 'witness_names',
                        :field_type => 'alpha',
                        :ajaxURL => '/stock/get_witness_names?search_string=',
                        :allowFreeText => false,
                        :helpText => 'Enter Witness Names'} %>



    <%= submit_tag "Create Loan Return" %>


<% end %>
