<div class="main-content">

  <div class="left-content">
    <table style="width:100%;" >
      <tr>
        <th colspan="3" style="text-align:left;"><h2>Lending Out Items:</h2></th>
      </tr>
      <tr>
        <th  style="text-align: left; width:15%;">Lending To</th><th style="width:2px; ">:</th>
        <th style="text-align: left"><b><%= session[:lend_details]['lend_to_location'].name %> </b></th>
      </tr>
      <tr>
        <th  style="text-align: left;">Issue Date</th><th style="width:2px; ">:</th>
        <th style="text-align: left"><%= session[:lend_details]['issue_date'] %>  </th>
      </tr>
      <tr>
        <th  style="text-align: left;">Authorised By</th><th style="width:2px; ">:</th>
        <th style="text-align: left"><%= session[:lend_details]['authorizer'] %></th>
      </tr>
    </table>

    <br />
    <br />

    <div class="div-products">

      <table style="width:100%;">
        <tr>
          <th colspan ="5" style="text-align: left;font-size: 20px;">
            Details For Items To Lend
          </th>
        </tr>

        <tr>
          <th style="text-align: left; width: 10%;background-color: silver;">Item Name</th>
          <th style="text-align: left; width: 10%;background-color: silver;text-align: center">Item Code</th>
          <th style="text-align: left; width: 10%;background-color: silver;text-align: center">Item Quantity</th>
          <th style="text-align: left; width: 10%;background-color: silver;text-align: center">Expiry Date</th>
          <th style="text-align: left; width: 10%;background-color: silver;">&nbsp;</th>
        </tr>
      </table>
    </div>

    <div class="div-products" style="height: 280px; overflow: auto;border: 0px">

      <table style="width:100%;">
        <%
           for item in @cart.items
             tr_class = cycle("blue", "white")
        %>

            <tr class ="tr_<%= tr_class %>" product_id="<%= item.product.id %>">
              <td style="text-align: left; width: 10%;"><%=  item.name %></td>
              <td style="text-align: center; width: 10%;"><%=  item.product.product_code rescue "Code not found"  %></td>
              <td style="text-align: center; width: 10%;"><%=  item.quantity %></td>
              <td style="text-align: center; width: 9.8%;"><%=  item.expiry_date.to_date.strftime("%d - %b - %Y") rescue "Does not expire" %></td>
              <td style="width: 10%;"><%= image_tag("close.png",:id => item.product.id, :class=>"img", :onclick=>"removeFromCart(this)") %></td>
            </tr>
        <% end rescue []%>
      </table>

    </div>

  </div>


  <div class="right-content">

    <table style="width: 100%;">
      <tr style="line-height: 50px;">
        <td><%= link_to "Add Item", '/orders/lend_create', :class => 'buttons' %></td>
      </tr>

      <tr style="line-height: 50px;">
        <td>&nbsp;</td>
      </tr>

      <tr style="line-height: 50px;">
        <td><%= link_to "Lend", "javascript:lendItems();", :class => 'buttons' %></td>
      </tr>

    </table>

  </div>

</div>
