<%= form_tag :action => 'lend_index', :method => :post  do %>

    <%= select_tag :facility, options_for_select(@locations),
                       {:field_type => 'alpha',
                        :helpText => 'Requesting Facility',
                        }%>

    <%= text_field_tag :authorizer, nil,
                       {:id => 'authorizer',
                        :field_type => 'alpha',
                        :ajaxURL => '/orders/get_authoriser?search_string=',
                        :allowFreeText => true,
                        :helpText => 'Who Authorised'} %>



    <%= text_field_tag :issue_date, nil,
                       {:id => 'issue_date', :field_type => 'date',
                        :maxDate => (Date.today + 20.year).to_date,
                        :helpText => 'Date issued'} %>

    <%= text_field_tag :return_date, nil,
                       {:id => 'return_date', :field_type => 'date',
                        :maxDate => (Date.today + 20.year).to_date,
                        :helpText => 'Enter date for returning items'} %>


    <%= submit_tag "Create lend order" %>


<% end %>
