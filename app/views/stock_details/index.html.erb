<html>
  <head>
    <title>Home</title>
    <style type="text/css">
      body {
        background-color: #fff;
        margin: 20px;
        font-family: "Nimbus Sans L", "Arial Narrow", sans-serif;
        overflow: hidden;
        color: #000;
        -moz-user-select: none;
      }

      .buttons-table td {
        text-align: center;
      }

      .buttons-table img {
        width: 128px;
        height: 128px;
      }

    </style>

  </head>
  <body>
<table width="100%" cellspacing="0" cellpadding="10">
      <tr>
        <td style="width: 100px; border-bottom: 1px solid #5496ef;">
          <img src="/images/<%= (File.exists?("#{Rails.root}/public/images/app.png") ?
              "app.png" : "baobab.png") %>" height="80" style="float: right;" />
        </td>
      </tr>
      <tr>
        <td colspan="6" style="padding: 0px;">
          <div id="container" style="width: 100%; height: 540px; overflow: auto;">

            <table>
  <tr>
    <th colspan="3" >Supplier Details</th>
  </tr>
  <tr>
    <td>Supplier Name:</td><td>&nbsp;</td><td><%= EpicsSupplier.find(session[:stock][:supplier_id]).name rescue "Supplier Not Known"   %></td>
  </tr>
  <tr>
    <td>Batch Number:</td><td>&nbsp;</td><td><%= session[:stock][:grn_number]   %></td>
  </tr>
  <tr>
    <td>Delivered Date:</td><td>&nbsp;</td><td><%= session[:stock][:grn_date].to_date.strftime("%d, %B %Y")   %></td>
  </tr>
</table>

<table>
  <tr>
    <th colspan ="4">
      Stock Details
    </th>
  </tr>
  <tr>
    <th>
     Item Name
    </th>
    <th>
     Item Code
    </th>
    <th>
      Item Quantity
    </th>
    <th>
      Expiry Date
    </th>
  </tr>
  <% for item in @cart.items %>
  <tr>
    <td><%=  item.name %></td>
    <td><%=  EpicsProduct.find(item.product_id).product_code rescue "Code not found"  %></td>
    <td><%=  item.quantity %></td>
    <td><%=  item.expiry_date.to_strftime("%d - %b - %Y") rescue "Does not expire" %></td>
  </tr>
  <% end %>
  <td align="center" colspan="2" >
    <button class="blue" style="margin: 8px; width: 250px; float: right;"
              onclick="window.location='/stock_details/new'">
      <span>
        Add Item
      </span>
    </button>
  </td>
  <td align="center" colspan="2" >
    <button class="blue" style="margin: 8px; width: 250px; float: right;"
              onclick="window.location='/stock_details/checkout'">
      <span>
        Save <%= pluralize(@cart.items.count, 'Item') %>
      </span>
    </button>
  </td>
   </table>
   
          </div>
        </td>
      </tr>
      
    </table>


 </body>
</html>
