<script>
  function set_ajaxURL_for_stock_details(name) {
    url = "/product/product_batches?product_name=" + name + "&search_str=";
    $('touchscreenInput'+tstCurrentPage).setAttribute('ajaxURL', url);
    listSuggestions(tstCurrentPage);
  }

</script>

<%= form_tag :action => 'modify_expiry_date', :method => :post  do %>

  <%= select_tag "product_name", nil,
    {:id => "item_name",
    :field_type => 'alpha',
    :ajaxURL => '/product/select_drug?search_string=',
    :helpText => "Select Item"} %>

  <%= select_tag "stock_expiry_id", nil,
    {:id => "stock_expiry_id",
    :field_type => 'numeric',
    :tt_onLoad => 'set_ajaxURL_for_stock_details($("item_name").value)',
    :helpText => "Select batch by expiry date"} %>

  <%= text_field_tag "new_expiry_date", nil,
    {:id => "new_expiry_date",
    :field_type => 'date',
    :maxDate => (Date.today + 20.year).to_date,
    :helpText => "Select corrected expiry date"} %>

  <%= submit_tag "Finish" %>

<% end %>

