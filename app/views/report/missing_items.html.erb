<style>
.item-table {
  width: 98%;
  padding-top: 10px;
}

td {
  font-size: 16px;
}

th {
  font-size: 20;
}

.left-align {
  text-align: left;
  padding-left: 5px;
}

.right-align {
  text-align: right;
  padding-right: 5px;
}

.report-div {                                                                   
  overflow: auto;                                                               
  height: 550px;                                                                
}  

</style>

<div class="report-div">

<table class="item-table">
<tr>
  <th class='left-align'>Batch number</th>
  <th class='left-align'>Item code</th>
  <th class='left-align'>Item name</th>
  <th class='right-align'>Received quantity</th>
  <th class='right-align'>Missing quantity</th>
</tr>
<%(@items || []).each do |stock_detail_id, item|%>
  <tr>
    <td class='left-align'><%=item[:batch_number] %></td>
    <td class='left-align'><%=item[:code] %></td>
    <td class='left-align'><%=item[:name] %></td>
    <td class='right-align'><%=item[:received_quantity] %></td>
    <td class='right-align'><%=item[:difference] %></td>
  </tr>
  <tr>
    <td colspan="5"><hr /><td>
  </tr>
<%end%>
</table>

</div>

<script>

  function setAttributes() {
    imgs = document.getElementsByTagName('img')
    for(var i = 0; i < imgs.length; i++){
      if(i > 0) {
        imgs[i].setAttribute("onclick","javascript: history.go(-1);");
      }
    }
  }

  setTimeout("setAttributes();",500);
</script>
