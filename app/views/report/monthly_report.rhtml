    <th style="border-width:1px 0px;"><%=@start_date.strftime('%B, %d')%></th>
    <th style="border-width:1px 0px; 1px 0px;">&nbsp;</th>
    <th style="border-width:1px 0px; 1px 0px;">&nbsp;</th>
    <th style="border-width:1px 0px; 1px 0px;">&nbsp;</th>
