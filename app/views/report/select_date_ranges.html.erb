
<script>
  var tt_cancel_destination="/"
</script>

<%
if params[:name] == 'audit'
  action = 'audit'
elsif params[:name] == 'received_items'
  action = 'received_items'
else
  action = 'disposed_items'
end
%>

<%form_tag :method => :post, :action => "#{action}" do %>
  <%= text_field_tag "date[start]", nil,                            
    {:id => "start_date",                                                   
    :field_type => 'date',
    :maxDate => "#{Date.today.to_date}",
    :helpText => "Select start date"} %>
 
  <%= text_field_tag "date[end]", nil,                            
    {:id => "end_date",                                                   
    :field_type => 'date',
    :maxDate => "#{Date.today.to_date}",
    :helpText => "Select end date"} %>
 
<%end%>
