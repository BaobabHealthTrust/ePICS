<style>
.monthly {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
}

th {
  border-style: solid;
  border-width: 1px;
}

.item_category {
  background-color: lightslategrey;
}
</style>




<table class="monthly">
<thead>
  <tr>
    <th>Facility</th>
    <th>&nbsp;</th>
    <th>District</th>
    <th>&nbsp;</th>
    <th>Month</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <tr>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>Year</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <tr>
    <th>Item No</th>
    <th>Item</th>
    <th>Unit of<br />Issue</th>
    <th>Balance<br />(stock on had)</th>
    <th>Losses</th>
    <th>+Adjustments</th>
    <th>-Adjustments</th>
    <th>Quantity Issued</th>
    <th>Days<br />Stocked out</th>
    <th>Quantity Received</th>
  </tr>
</thead>

<tbody>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <%(@monthly_report || {}).sort_by {|x,y|x.to_date}.each do |date, categories|
    (categories).sort_by {|x,y|x}.each do |category, items|
  %>
  <tr class="item_category">
    <td><%=category%></td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <% @monthly_report[date][category].sort_by {|x,y|y[:item_code]}.each do |item_id , values|%>
  <tr>
    <td><%=values[:item_code]%></td>
    <td><%=values[:item]%></td>
    <td><%=values[:unit_of_issue]%></td>
    <td style="text-align:right;padding-right: 10px;">
      <%=values[:current_quantity]%>
    </td>
    <td style="text-align:right;padding-right: 10px;">
      <%=values[:losses]%>
    </td>
    <td style="text-align:right;padding-right: 10px;">
      <%=values[:positive_adjustments]%>
    </td>
    <td style="text-align:right;padding-right: 10px;">
      <%=values[:negative_adjustments]%>
    </td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td style="text-align:right;padding-right: 10px;">
      <%=values[:received_quantity]%>
    </td>
  </tr>
  <%
     end
    end
  end
  %>
<tbody>

</table>
