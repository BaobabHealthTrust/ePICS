<script>
  function addPrinterIcon(){
    nav = document.getElementById('nav')
    img = document.createElement('img')
    img.src="/images/emblem_print.png"
    img.id='printer'
    img.onclick=function(){
      printReport();
    }
    nav.appendChild(img)
  }
  window.setTimeout("addPrinterIcon();", 50)

  function printReport(){

    jQuery.ajax({
      type: "POST",
      url: "/report/print_monthly_report",
      data: "start_date=<%=@start_date%>",
      success: function(){
        document.location.href="/"
      }

    });
  }
</script>

<style>
#printer{
  height: 60px;
  margin-left: 81%;
  margin-top: 10px;
  cursor: pointer;
  float: left;
}

.monthly {
  width: 100%;
 /* border-collapse: collapse;*/
  margin-top: 10px;
  border-spacing: 0.001em;
}

th {
  border-style: solid;
  border-width: thin;
}

.item_category {
  background-color: lightslategrey;
}

.monthly td {
  border-style: solid;
  border-width: thin;
  border-color: black;
  border-spacing: 1px;
}

.report-div {                                                                   
  overflow: auto;                                                               
  height: 550px;                                                                
}  

</style>


