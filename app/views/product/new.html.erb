</script>

<form action="create" method='post'>

  <label for="name">Item Name</label>
  <%= text_field_tag(:name) %>

  <label for="product_code">Item Code</label>
  <%= text_field_tag(:product_code) %>

  <label for="epics_product_units_id">Item Unit</label>
  <%= select_tag(:epics_product_units_id, options_for_select(@product_unit_map),
    :helpText => "Select Item Unit") %>

  <label for="epics_product_type_id">Item Type</label>
  <%= select_tag(:epics_product_type_id, options_for_select(@product_type_map),
    :helpText => "Select Item Type") %>

  <label for="expire">Item expires?</label>
  <%= select_tag(:expire, options_for_select([["Yes","1"],["No", '0']]),
    :helpText => "Does Item Expire?") %>

  <label for="min_stock">Enter Item Minimum Stock Quantity</label>
  <%= text_field_tag(:min_stock) %>

  <label for="max_stock">Enter Item Maximum Stock Quantity</label>
  <%= text_field_tag(:max_stock) %>
  

  <%= submit_tag value ="Submit"%>

</form>