<div class="report-div">

  <table cellpadding=5 width='100%'>
    <tr>
      <td>
        <table cellpadding=5 width='100%'>
          <tr>
            <th style='border: 1px solid #ccc; background-color: #666; color: #eee;width: 20%;'>Item Property</th>
            <th style='border: 1px solid #ccc; background-color: #666; color: #eee;'>Property Value</th>
            <th style='border: 1px solid #ccc; background-color: #666; color: #eee;width: 20%;'>&nbsp;</th>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Name</td>
            <td class="properties"><%= @product.name %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_name' , :class => 'edit'}),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Code</td>
            <td class="properties"><%= @product.product_code %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_code', :class => "edit" }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Unit</td>
            <td class="properties"><%= @product.unit %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_unit_id' }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Type</td>
            <td class="properties"><%= @product.type %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_type_id' }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Category</td>
            <td class="properties"><%= @product.category %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_category_id' }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Expires?</td>
            <td class="properties"><%= @product.expire ? "Yes" : "No" %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_expire' }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Minimum Stock</td>
            <td class="properties"><%= @product.min_stock %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'min_stock' }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold">Maximum Stock</td>
            <td class="properties"><%= @product.max_stock %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'max_stock' }),
                           :remote => true) %>
            </td>
          </tr>
          <tr>
            <td class="properties" style="padding-left: 1vw;font-weight: bold" >Fast Moving?</td>
            <td class="properties"><%= @product.movement ? "Yes" : "No" %></td>
            <td class="properties" style="text-align: center;">
              <%= link_to (image_tag("edit.png", :class => "edit") ,
                           url_for({:controller => 'product', :action => 'edit_product', :product => @product.id, :field => 'product_movement' }),
                           :remote => true) %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

</div>


