<style>
  #viewport {
    display: none;
}

</style>

<% form_tag :action => 'monthly_report' do %>
  <%= select_tag "dates[start]", nil,                            
    {:id => "start_date",                                                   
    :field_type => 'date',
    :maxDate => "#{Date.today.to_date}",
    :helpText => "Select start date"} %>
  
  <%#= select_tag "end_date", nil,                            
    {:id => "end_date",                                                   
    :field_type => 'date',
    :minDate => "#{Date.today.to_date}",
    :maxDate => "#{(Date.today + 1.year).to_date}",
    :helpText => "Select end date"} %>

<%end%>
